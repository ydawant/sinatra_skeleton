<div class="container">
  <h1>Welcome to Sinatra!</h1>
  <p>Hello, world!</p>

  


<form action="/index" method="post">
    Check for Anagram yo!
    <br>
    <input type="text" name="word">
    <input type="submit" value="check_it">
  </form>


<div class="words_matched">
  <p>Words Matched: </p>
  <% if @match_words %>
  <ol>
    <% @match_words.each do |word| %>
      <li><%= word.word %></li>
    <% end %>
  </ol>
  <% end %>
</div>










